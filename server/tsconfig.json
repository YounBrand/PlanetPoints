{
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "../dist",
    "rootDir": ".",
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "esnext",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "include": ["**/*"],
  "exclude": ["dist", "node_modules"]
}
